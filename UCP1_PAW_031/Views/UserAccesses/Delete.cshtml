@model UCP1_PAW_031.Models.UserAccess

@{
    ViewData["Title"] = "Delete Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="flex bg-blue-50 text-blue-700 border border-blue-200 py-3 px-auto rounded-lg mb-4 mt-10 pt-5" aria-label="Breadcrumb">
  <ol class="container ml-auto pl-4 inline-flex items-center space-x-1 md:space-x-3">
    <li class="inline-flex items-center">
      <a asp-action="Index" asp-controller="Home" class="text-blue-700 hover:text-blue-900 hover:no-underline inline-flex items-center">
        <svg class="w-5 h-5 mr-auto" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
      </a>
    </li>
    <li>
      <div class="flex items-center">
        <svg class="w-6 h-6 text-blue-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
        <a asp-action="Index" asp-controller="UserAccesses" class="text-blue-700 hover:text-blue-900 hover:no-underline ml-1 md:ml-2 text-sm font-medium">Data User</a>
      </div>
    </li>
    <li aria-current="page">
      <div class="flex items-center">
        <svg class="w-6 h-6 text-blue-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
        <span class="text-blue-400 ml-1 md:ml-2 text-sm font-medium">Delete Data</span>
      </div>
    </li>
     <li aria-current="page">
      <div class="flex items-center">
        <svg class="w-6 h-6 text-blue-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
        <span class="text-blue-400 ml-1 md:ml-2 text-sm font-medium">@Html.DisplayFor(model => model.Name)</span>
      </div>
    </li>
  </ol>
</nav>

<main class="container h-full px-6">
<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-3 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      Data Information
    </h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      Personal details and delete data.
    </p>
  </div>
    <dl class="border-t border-gray-200">
      <div class="bg-gray-50 px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
           @Html.DisplayName("Nama")
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          @Html.DisplayFor(model => model.Name)
        </dd>
      </div>
      <div class="bg-white px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
           @Html.DisplayName("Id Card")
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
           @Html.DisplayFor(model => model.IdCard)
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
           @Html.DisplayName("Email")
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="px-2 py-1 inline-flex font-medium leading-tight text-green-700 bg-yellow-300 rounded-full dark:bg-green-700 dark:text-green-100">
                 @Html.DisplayFor(model => model.Email)
            </span>
        </dd>
      </div>
      <div class="bg-white px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          @Html.DisplayName("Phone")
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          @Html.DisplayFor(model => model.Phone)
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
           @Html.DisplayName("Address")
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          @Html.DisplayFor(model => model.Address)
        </dd>
      </div>
      <div class="bg-white px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Menu
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <ul role="list" class="border border-gray-200 rounded-md divide-y divide-gray-200">
            <li class="pl-3 pr-4 py-3 flex items-center justify-end grid-cols-6 gap-6 text-sm"> 
                  <div class="ml-4 flex-shrink-0">
                    <button class="btn bg-red-600 hover:bg-red-700 font-medium text-gray-50 hover:text-gray-100" data-toggle="modal" data-target="#modalChoice">
                      Delete
                    </button>
                    <a asp-action="Index" class="btn bg-purple-600 hover:bg-purple-500 font-medium text-green-50 hover:text-green-100">
                      Back
                    </a>
                    <div class="modal fade modal-alert opacity-85" id="modalChoice" tabindex="-1" aria-hidden="true">
                       <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content shadow">
                                 <form asp-action="Delete">
                                      <div class="modal-content rounded-4 shadow bg-white">
                                           <div class="modal-header text-center">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 flex items-center text-red-500 mx-auto" viewBox="0 0 20 20" fill="currentColor">
                                                  <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                                </svg>
                                           </div>
                                           <div class="modal-body p-4 text-center">
                                                <h5 class="mb-2 text-red-500 font-bold">Are you sure want to delete data @Html.DisplayFor(model => model.Name)?</h5>
                                                <p class="mb-0 text__delete__2">You can still change your mind by click "No thanks".</p>
                                           </div>
                                           <div class="modal-footer flex-nowrap p-0">
                                                <input type="hidden" asp-for="UserId" />
                                                <input type="submit" value="Yes, delete" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0 border-right bg-red-600 hover:bg-red-700 font-medium text-gray-50 hover:text-gray-100" /> 
                                                <button type="button" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0 bg-blue-500 hover:bg-blue-600 font-medium text-green-50 hover:text-green-100" data-dismiss="modal">No, thanks</button>
                                           </div>
                                      </div>
                                 </form>
                            </div>
                       </div>
                    </div>
                 </div>
            </li>
          </ul>
        </dd>
      </div>
    </dl>
</div>
</main>


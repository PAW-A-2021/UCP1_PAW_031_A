@using Microsoft.AspNetCore.Identity
@using UCP1_PAW_031.Helper

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travelovia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet">
	<link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet">
    <link href="https://unpkg.com/tailwindcss@2.0/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <link href="~/css/swiper.css" rel="stylesheet" />
    <link href="~/css/magnific-popup.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar fixed-top">
        <div class="container sm:px-4 lg:px-8 flex flex-wrap items-center justify-between lg:flex-nowrap">

            <!-- Image Logo -->
            <a class="inline-block mr-4 py-0.5 text-xl whitespace-nowrap hover:no-underline focus:no-underline" asp-action"Index" asp-controller="Home">
                <div class="text-sm">
                        Sistem Informasi
                </div>
                Travelovia
            </a>

            <button class="background-transparent rounded text-xl leading-none hover:no-underline focus:no-underline lg:hidden lg:text-gray-400" type="button" data-toggle="offcanvas">
                <span class="navbar-toggler-icon inline-block w-8 h-8 align-middle"></span>
            </button>

            <div class="navbar-collapse offcanvas-collapse lg:flex lg:flex-grow lg:items-center" id="navbarsExampleDefault">
                  <ul class="pl-0 mt-2 mb-2 flex flex-col list-none lg:mt-0 lg:mb-0 lg:flex-row">
                    <li>
                        <a class="nav-link page-scroll @Url.MakeActive("Home")" asp-action="Index" asp-controller="Home">Home <span class='sr-only'>(current)</span></a>
                    </li>
                    <li class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Menu</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown01">
                            <a class="dropdown-item page-scroll @Url.MakeActive("UserAccesses")" asp-action="Index" asp-controller="UserAccesses">User</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item page-scroll @Url.MakeActive("BeachPlaces")" asp-action="Index" asp-controller="BeachPlaces">Beach</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item page-scroll @Url.MakeActive("Drivers")" asp-action="Index" asp-controller="Drivers">Driver</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item page-scroll @Url.MakeActive("Transactions")" asp-action="Index" asp-controller="Transactions">Transaction</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item page-scroll @Url.MakeActive("Payments")" asp-action="Index" asp-controller="Payments">Payment</a>
                        </div>
                    </li>
                    <li>
                        <a class="nav-link page-scroll @Url.MakeActive("Privacy")" asp-action="Index" asp-controller="Privacy">Privacy Policy</a>
                    </li>
                    <li>
                        <a class="nav-link page-scroll @Url.MakeActive("About")" asp-action"Index" asp-controller="About">About</a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="ml-auto flex flex-col list-none lg:mt-0 lg:mb-0 lg:flex-row">
                        <li>
                            <h4 class="nav-link active">Sign as @UserManager.GetUserName(User)</h4>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="ml-auto flex flex-col list-none lg:mt-0 lg:mb-0 lg:flex-row">
                        <li>
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    </ul>
                }
            </div> 
        </div> 
    </nav> 
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer px-4 divide-y dark:bg-coolGray-800 dark:text-coolGray-100">
        <div class="container flex flex-col justify-between py-10 mx-auto space-y-8 lg:flex-row lg:space-y-0">
            <div class="lg:w-1/3">
                <a href="#" class="flex justify-center space-x-3 lg:justify-start">
                    <div class="flex items-center justify-center w-12 h-12 rounded-full dark:bg-violet-400">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" fill="currentColor" class="flex-shrink-0 w-5 h-5 rounded-full dark:text-coolGray-900">
                            <path d="M18.266 26.068l7.839-7.854 4.469 4.479c1.859 1.859 1.859 4.875 0 6.734l-1.104 1.104c-1.859 1.865-4.875 1.865-6.734 0zM30.563 2.531l-1.109-1.104c-1.859-1.859-4.875-1.859-6.734 0l-6.719 6.734-6.734-6.734c-1.859-1.859-4.875-1.859-6.734 0l-1.104 1.104c-1.859 1.859-1.859 4.875 0 6.734l6.734 6.734-6.734 6.734c-1.859 1.859-1.859 4.875 0 6.734l1.104 1.104c1.859 1.859 4.875 1.859 6.734 0l21.307-21.307c1.859-1.859 1.859-4.875 0-6.734z"></path>
                        </svg>
                    </div>
                    <span class="self-center text-2xl font-semibold">Travelovia</span>
                </a>
            </div>
            <div class="grid grid-cols-2 text-sm gap-x-3 gap-y-8 lg:w-2/3 sm:grid-cols-4">
                <div class="space-y-3">
                    <h3 class="tracking-wide uppercase dark:text-coolGray-50">Product</h3>
                    <ul class="space-y-1">
                        <li>
                            <a asp-action="Index" asp-controller="BeachPlaces">Beach</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="UserAccesses">User</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Drivers">Driver</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Transactions">Transaction</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Payments">Payment</a>
                        </li>
                    </ul>
                </div>
                <div class="space-y-3">
                    <h3 class="tracking-wide uppercase dark:text-coolGray-50">Company</h3>
                    <ul class="space-y-1">
                        <li>
                            <a asp-action="Index" asp-controller"Privacy">Privacy Policy</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller"About">About</a>
                        </li>
                    </ul>
                </div>
                <div class="space-y-3">
                    <h3 class="uppercase dark:text-coolGray-50">Developers</h3>
                    <ul class="space-y-1">
                        <li>
                            <a href="#">Public API</a>
                        </li>
                        <li>
                            <a href="#">Documentation</a>
                        </li>
                        <li>
                            <a href="#">Guides</a>
                        </li>
                    </ul>
                </div>
                <div class="space-y-3">
                    <div class="uppercase dark:text-coolGray-50">Social media</div>
                    <div class="flex justify-start space-x-3">
                        <div class="social-container">
                            <span class="fa-stack">
                                <a href="#your-link" class="items-center p-1">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-facebook-f fa-stack-1x"></i>
                                </a>
                            </span>
                            <span class="fa-stack">
                                <a href="#your-link" class="items-center p-1">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-twitter fa-stack-1x"></i>
                                </a>
                            </span>
                            <span class="fa-stack">
                                <a href="#your-link" class="items-center p-1">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-pinterest-p fa-stack-1x"></i>
                                </a>
                            </span>
                            <span class="fa-stack">
                                <a href="#your-link" class="items-center p-1">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-instagram fa-stack-1x"></i>
                                </a>
                            </span>
                            <span class="fa-stack">
                                <a href="#your-link" class="items-center p-1">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-youtube fa-stack-1x"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="py-6 text-sm text-center dark:text-coolGray-400">© 2021 Travelovia. All rights reserved.</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.easing.min.js"></script>
    <script src="~/js/swiper.min.js"></script>
    <script src="~/js/jquery.magnific-popup.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
